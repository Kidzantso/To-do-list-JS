        <option value="Low">ğŸŸ¢ Low</option>
    </select>
</div>


<ul id="task-list">
    <% if (tasks.length === 0) { %>
        <p>No tasks found. Start by adding one!</p>
    <% } else { %>
        <% tasks.forEach(task => { %>
            <li class="task-item <%= task.status === 1 ? 'completed' : '' %>" 
                data-category="<%= task.category %>" 
                data-priority="<%= task.priority %>">
                
                <span class="priority <%= task.priority.toLowerCase() %>">
                    <%= task.priority === "High" ? "ğŸ”´" : task.priority === "Medium" ? "ğŸŸ¡" : "ğŸŸ¢" %>
                </span>
                <strong><%= task.name %></strong> - <%= task.description %> 
                <small>(<%= task.category %>)</small>
                
                <div class="task-actions">
                    <% if (task.status === 0) { %>
                        <a href="/complete-task/<%= task.ID %>" class="complete">âœ… Complete</a>
                    <% } %>
                    <a href="/delete-task/<%= task.ID %>" class="delete">âŒ Delete</a>
                </div>
            </li>
        <% }); %>
    <% } %>
</ul>
    </div>

